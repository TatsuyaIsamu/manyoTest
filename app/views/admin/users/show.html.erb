
<h1><%= @admin_user.name %>様の投稿一覧</h1>

<%= link_to 'Edit', edit_admin_user_path(@admin_user) %> |
<%= link_to 'Back', admin_users_path %>

<% @admin_user.tasks.each do |task| %>
  <table class="table" >
  <tr><th>titile</th><td><%= task.title%></td></tr>
  <tr><th>content</th><td><%= task.content%></td></tr>
  </table>
  <p>created_at: <%= task.created_at %>deadline:<%= task.deadline %>status:<%= task.status%>priority:<%= task.priority %></p>
<% end %>

