<p id="notice"><%= notice %></p>
<table class="table show_table">
  <tr>
    <td>
      <strong>Name:</strong>
    </td>
    <td>
      <%= @task.title %>
    </td>
  </tr>
  
  <tr>
    <td>
        <strong>Content:</strong>
    </td>
    <td>
        <%= @task.content %>
    </td>
    
  </tr>
  

  <tr>
    <td>
      <strong>Status:</strong>
     </td>
     <td>
       <%= @task.status %>
     </td>
  </tr>


  <tr>
    <td>
      <strong>Deadline:</strong>
    </td>
    <td>
      <%= @task.deadline %>
    </td>
  </tr>

  <tr>
    <td>
      <strong>Priority:</strong>
    </td>
    <td>
      <%= @task.priority %>
    </td>
  </tr>
 <% if @task.labels.present? %>
  <tr>
    <td>
      <strong>Label:</strong>
    </td>
    <td>
      <% @task.labels.each do |lebel| %>
        <%= lebel.label_name %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
